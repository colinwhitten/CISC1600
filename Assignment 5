#include <iostream>
#include <cstdlib>
#include <ctime>
using namespace std;

int main ()
{

        srand (time(0));
        int number;
        number = rand() %10+1;
        int guess;
        do {
                cout << "Guess a number between 1 and 10: ";
                cin >> guess;
                if (guess < number)
                        cout << "Too small, try again" << endl;
                else if (guess > number)
                        cout << "Too large, try again" << endl;
                else
                        cout << "That's correct!" << endl;
                } while (guess != number);

        return 0;
}

